
{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Todo App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    >
</head>
<body class="container py-4">

    {# Optional: simple header #}
    <nav class="navbar navbar-expand bg-light rounded mb-3 px-3">
        <a class="navbar-brand" href="{{ path('task_index') }}">Todo App</a>
        <div class="ms-auto d-flex gap-2">
            {% set loggedIn = app.request.session.get('user_id') is not empty %}
            {% if loggedIn %}
                <span class="navbar-text me-2">Hi, {{ app.request.session.get('username') }}</span>
                <a href="{{ path('auth_logout') }}" class="btn btn-sm btn-outline-secondary">Logout</a>
            {% else %}
                <a href="{{ path('auth_login') }}" class="btn btn-sm btn-outline-primary">Login</a>
                <a href="{{ path('auth_register') }}" class="btn btn-sm btn-primary">Register</a>
            {% endif %}
        </div>
    </nav>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} my-2">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
</body>
</html>
