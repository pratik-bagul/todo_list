
{% extends 'base.html.twig' %}
{% block title %}Task #{{ task.id }}{% endblock %}
{% block body %}
<h1>{{ task.title }}</h1>
<p><strong>Completed:</strong> {{ task.isDone ? 'Yes' : 'No' }}</p>
<p><strong>Due:</strong> {{ task.dueAt ? task.dueAt|date('Y-m-d H:i') : '-' }}</p>
<p>
  <a class="btn btn-secondary" href="{{ path('task_edit', {id: task.id}) }}">Edit</a>
  <a class="btn btn-light" href="{{ path('task_index') }}">Back</a>
</p>
{% endblock %}
