
{# templates/task/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold d-flex align-items-center gap-2">
            <i class="bi bi-check2-square text-primary"></i> Tasks
        </h1>

        <div class="d-flex gap-2">
            <a href="{{ path('task_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> New Task
            </a>

            <a href="{{ path('task_trash') }}" class="btn btn-outline-secondary">
                <i class="bi bi-trash3 me-1"></i> Trash
            </a>
        </div>
    </div>

    <!-- Tasks Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover table-striped table-bordered mb-0 align-middle">
                <thead class="table-light">
                    <tr class="text-muted small">
                        <th width="60">ID</th>
                        <th>Title</th>
                        <th width="130">Status</th>
                        <th width="180">Due</th>
                        <th class="text-end" width="210">Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for task in pagination %}
                    <tr>
                        <td class="fw-semibold">{{ task.id }}</td>

                        <td>
                            <a href="{{ path('task_show', {id: task.id}) }}" 
                               class="text-decoration-none fw-semibold">
                                {{ task.title }}
                            </a>
                        </td>

                        <td>
                            {% if task.isDone %}
                                <span class="badge bg-success">
                                    <i class="bi bi-check2"></i> Completed
                                </span>
                            {% else %}
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-hourglass-split"></i> Pending
                                </span>
                            {% endif %}
                        </td>

                        <td>
                            {{ task.dueAt ? task.dueAt|date('Y-m-d H:i') : 'â€”' }}
                        </td>

                        <td class="text-end">

                            <!-- Edit -->
                            <a href="{{ path('task_edit', {id: task.id}) }}" 
                               class="btn btn-sm btn-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <!-- Soft Delete -->
                            <form method="post"
                                  action="{{ path('task_delete', {id: task.id}) }}"
                                  class="d-inline"
                                  onsubmit="return confirm('Move to trash?');">
                                <input type="hidden" name="_token"
                                       value="{{ csrf_token('delete_task_' ~ task.id) }}">
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>

                            <!-- Toggle Done -->
                            <form method="post"
                                  action="{{ path('task_toggle', {id: task.id}) }}"
                                  class="d-inline">
                                <button class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-repeat"></i>
                                </button>
                            </form>

                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-clipboard-x fs-4 d-block mb-2"></i>
                            No tasks found.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="p-3 d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>

        </div>
    </div>
</div>
{% endblock %}
