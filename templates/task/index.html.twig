
{# templates/task/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
<div class="container mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 m-0">Tasks</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('task_new') }}" class="btn btn-primary">New Task</a>
            <a href="{{ path('task_trash') }}" class="btn btn-outline-secondary">Trash</a>
        </div>
    </div>

    <!-- Tasks Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table mb-0 table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Due</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                {# ðŸ‘‡ iterate over "pagination" instead of "tasks" #}
                {% for task in pagination %}
                    <tr>
                        <td>{{ task.id }}</td>

                        <td>
                            <a class="text-decoration-none fw-semibold" 
                               href="{{ path('task_show', {id: task.id}) }}">
                                {{ task.title }}
                            </a>
                        </td>

                        <td>
                            <span class="badge {{ task.isDone ? 'bg-success' : 'bg-warning text-dark' }}">
                                {{ task.isDone ? 'Completed' : 'Pending' }}
                            </span>
                        </td>

                        <td>
                            {{ task.dueAt ? task.dueAt|date('Y-m-d H:i') : 'â€”' }}
                        </td>

                        <td class="text-end">

                            <a class="btn btn-sm btn-secondary" 
                               href="{{ path('task_edit', {id: task.id}) }}">
                                Edit
                            </a>

                            <!-- Soft Delete -->
                            <form method="post"
                                  action="{{ path('task_delete', {id: task.id}) }}"
                                  class="d-inline"
                                  onsubmit="return confirm('Move to trash?');">
                                <input type="hidden" name="_token"
                                       value="{{ csrf_token('delete_task_' ~ task.id) }}">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>

                            <!-- Toggle Done -->
                            <form method="post"
                                  action="{{ path('task_toggle', {id: task.id}) }}"
                                  class="d-inline">
                                <button class="btn btn-sm btn-outline-info">Toggle</button>
                            </form>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No tasks yet.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <!-- Pagination controls (Bootstrap 5) -->
            <nav aria-label="Page navigation" class="p-3">
                {{ knp_pagination_render(pagination) }}
            </nav>

        </div>
    </div>

</div>
{% endblock %}
